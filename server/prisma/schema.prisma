generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FileSystem {
  id          Int         @id @unique @default(autoincrement())
  name        String
  enabled     Boolean
  created_at  DateTime    @default(now())
  directories Directory[]
}

model Directory {
  id             Int         @id @unique @default(autoincrement())
  file_system_id Int
  name           String
  permissions    Int?        @default(755)
  is_spawn_point Boolean     @default(false)
  width          Int         @default(3)
  height         Int         @default(3)
  parent_dir_id  Int?
  file_system    FileSystem  @relation(fields: [file_system_id], references: [id])
  parent_dir     Directory?  @relation("parent_directory", fields: [parent_dir_id], references: [id])
  children_dir   Directory[] @relation("parent_directory")
  files          File[]
}

model File {
  id           Int       @id @unique @default(autoincrement())
  content      String
  name         String
  permissions  Int?      @default(755)
  directory_id Int
  directory    Directory @relation(fields: [directory_id], references: [id])
}
