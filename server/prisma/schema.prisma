// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// The environnment that hosts files and directories
model FileSystem {
  id          Int         @id @default(autoincrement())
  name        String
  enabled     Boolean
  created_at  DateTime    @default(now())
  directories Directory[]
}

// Directory model
model Directory {
  id             Int         @id @default(autoincrement())
  file_system    FileSystem  @relation(fields: [file_system_id], references: [id])
  file_system_id Int
  name           String
  permissions    Int
  is_spawn_point Boolean
  width          Int
  height         Int
  parent_dir     Directory?  @relation(name: "parent_directory", fields: [parent_dir_id], references: [id])
  children_dir   Directory[] @relation(name: "parent_directory")
  parent_dir_id  Int?
  files          File[]
}

// File model
model File {
  id           Int       @id @default(autoincrement())
  content      String
  permissions  Int
  directory    Directory @relation(fields: [directory_id], references: [id])
  directory_id Int
}
